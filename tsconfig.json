{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "typeRoots": [
      "./types",
      "./src"
    ],
    "esModuleInterop": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "jsx": "react",
//    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": false,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "@types/node"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "*.js"
  ]
}
