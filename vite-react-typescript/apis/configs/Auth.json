{
  "fileName": "Auth",
  "title": "授权登录API",
  "desc": [
    "用户通过微信/LINE/PayPay扫码授权登录API"
  ],
  "apiUrl": "api/auth",
  "params": [
    {
      "key": "platform",
      "type": "sting",
      "desc": "入口平台，微信`weixin`/LINE`line`/PayPay`paypay`/普通浏览器`other`"
    },
    {
      "key": "shopId",
      "type": "string",
      "desc": "商铺ID或唯一标识"
    },
    {
      "key": "tableId",
      "type": "number",
      "desc": "餐桌编号(下单时再提交？)"
    },
    {
      "key": "redirectUrl",
      "type": "string",
      "desc": "授权成功后的跳转地址"
    }
  ],
  "method": "post",
  "children": [
    {
      "name": "AuthResponse",
      "desc": [
      ],
      "type": "interface",
      "columns": [
        {
          "key": "user_info",
          "required": true,
          "type": "UserInfo",
          "desc": "用户信息"
        },
        {
          "key": "entry_cover",
          "required": false,
          "type": "string",
          "desc": "欢迎页封面图。为空则不显示欢迎页面，直接进入菜品主页"
        },
        {
          "key": "basic_data",
          "required": true,
          "type": "BasicData",
          "desc": "基数数据"
        }
      ]
    },
    {
      "name": "UserInfo",
      "desc": [
        "用户信息"
      ],
      "type": "interface",
      "columns": [
        {
          "key": "id",
          "required": true,
          "type": "number",
          "desc": "用户ID"
        },
        {
          "key": "name",
          "required": true,
          "type": "string",
          "desc": "用户昵称"
        },
        {
          "key": "avatar",
          "required": true,
          "type": "string",
          "desc": "用户头像"
        }
      ]
    },
    {
      "name": "BasicData",
      "desc": [
        "系统/店铺基础数据"
      ],
      "type": "interface",
      "columns": [
        {
          "key": "price_symbol",
          "required": true,
          "type": "string",
          "desc": "价格符号"
        },
        {
          "key": "isTaxIncluded",
          "required": true,
          "type": "boolean",
          "desc": "是否为含税价格"
        }
      ]
    }
  ]
}